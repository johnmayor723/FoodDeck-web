<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FoodDeck</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="style.css"> <!-- Link to external stylesheet -->
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">FoodDeck</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="#">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Shop</a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Categories
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Category 1</a>
          <a class="dropdown-item" href="#">Category 2</a>
          <a class="dropdown-item" href="#">Category 3</a>
        </div>
      </li>
    </ul>
    <ul class="navbar-nav">
      <!-- Profile Section with dynamic user state -->
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Profile
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
          <% if (user) { %>
            <a class="dropdown-item" href="/logout">Logout</a>
          <% } else { %>
            <a class="dropdown-item" href="/signup">Sign Up</a>
            <a class="dropdown-item" href="/login">Login</a>
          <% } %>
        </div>
      </li>
      <!-- Shopping Cart with FontAwesome icon and badge -->
      <li class="nav-item">
        <a class="nav-link" href="/cart">
          <i class="fas fa-shopping-cart"></i> <span class="badge badge-primary"><%= itemCount %></span>
        </a>
      </li>
    </ul>
  </div>
</nav>

<!-- Hero Section -->
<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Welcome to FoodDeck</h1>
    <p class="lead text-muted">Explore our wide variety of food categories and enjoy shopping.</p>
    <a href="/shop" class="btn btn-primary my-2">Shop Now</a>
  </div>
</section>

<!-- Category Section -->
<section class="container my-5">
  <h2 class="text-center">Categories</h2>
  <div class="row">
    <div class="col-md-3 col-sm-6 mb-4">
      <div class="card">
        <img src="category1.jpg" class="card-img-top" alt="Category 1">
        <div class="card-body">
          <h5 class="card-title">Category 1</h5>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-4">
      <div class="card">
        <img src="category2.jpg" class="card-img-top" alt="Category 2">
        <div class="card-body">
          <h5 class="card-title">Category 2</h5>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-4">
      <div class="card">
        <img src="category3.jpg" class="card-img-top" alt="Category 3">
        <div class="card-body">
          <h5 class="card-title">Category 3</h5>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-4">
      <div class="card">
        <img src="category4.jpg" class="card-img-top" alt="Category 4">
        <div class="card-body">
          <h5 class="card-title">Category 4</h5>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Products Section -->
<section class="container my-5">
  <h2 class="text-center">Featured Products</h2>
  <div class="row">
    <% products.forEach(function(product) { %>
      <div class="col-md-3 col-sm-6 mb-4">
        <div class="card">
          <img src="<%= product.image %>" class="card-img-top" alt="<%= product.title %>">
          <div class="card-body text-center">
            <h5 class="card-title"><%= product.title %></h5>
            <p class="card-text">$<%= product.price %></p>
            <a href="/products/<%= product.id %>" class="btn btn-primary">View Details</a>
            <button class="btn btn-success mt-2 add-to-cart-btn">Add to Cart</button>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<!-- Footer Section -->
<footer class="bg-light text-center text-lg-start mt-5">
  <div class="container p-4">
    <div class="row">
      <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
        <h5 class="text-uppercase">FoodDeck</h5>
        <p>Discover a world of flavors with FoodDeck. Download our app and stay connected.</p>
      </div>
      <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
        <h5 class="text-uppercase">Links</h5>
        <ul class="list-unstyled mb-0">
          <li><a href="/about" class="footer-link">About Us</a></li>
          <li><a href="/contact" class="footer-link">Contact</a></li>
          <li><a href="/privacy" class="footer-link">Privacy Policy</a></li>
        </ul>
      </div>
      <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
        <h5 class="text-uppercase">Get Our App</h5>
        <ul class="list-unstyled">
          <li><a href="#"><img src="google-play.png" alt="Google Play" width="120"></a></li>
          <li><a href="#"><img src="app-store.png" alt="App Store" width="120"></a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="text-center p-3 bg-dark text-white">
    Â© 2024 FoodDeck - All rights reserved.
  </div>
</footer>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
