
<!-- Hero Section -->
<section class="jumbotron text-center" style="background-image: url('/img/hero.jpeg'); background-size: cover; color: white;">
  <div class="container">
    <h1 class="jumbotron-heading">Welcome to FoodDeck</h1>
    <p class="lead text-light">Explore our wide variety of food categories and enjoy shopping.</p>
    <a href="/shop" class="btn btn-primary my-2">Shop Now</a>
  </div>
</section>

<!-- Featured Products Section -->
<section class="container my-5">
  <h2 class="text-center">Featured Products</h2>
  <div class="row">
    <% products.forEach(function(product, index) { %>
      <div class="col-md-3 col-sm-6 mb-4">
        <div class="card">
          <img src="<%= product.image %>" class="card-img-top" alt="<%= product.title %>">
          <div class="card-body text-center">
            <h5 class="card-title"><%= product.title %></h5>
            <p class="card-text">$<%= product.price %></p>
            <div class="d-flex justify-content-between">
              <a href="/products/<%= product.id %>" class="btn btn-primary">View Details</a>
              <form action="/cart/add" method="POST" class="d-inline">
                <input type="hidden" name="productId" value="<%= product.id %>">
                <button type="submit" class="btn btn-success add-to-cart-btn">Add to Cart</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% if ((index + 1) % 2 === 0 && index < products.length - 1) { %>
        <div class="w-100 d-block d-md-none"></div>
      <% } %>
    <% }) %>
  </div>
</section>
